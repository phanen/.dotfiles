#!/bin/bash

SCONTROL=Master
if [[ "$(hostname)" = "cb" ]]; then
SCONTROL=DAC1
fi

case "$1" in
    on) amixer sset "${SCONTROL}" on;;
    toggle) amixer sset "${SCONTROL}" toggle ;;
    mute) amixer sset "${SCONTROL}" mute;;
    up) amixer sset "${SCONTROL}" 5%+;;
    down) amixer sset "${SCONTROL}" 5%-;;
    bigup) amixer sset "${SCONTROL}" 15%+;;
    bigdown) amixer sset "${SCONTROL}" 15%-;;
esac 
#>/dev/null
