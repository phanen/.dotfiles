# /usr/share/doc/bspwm/examples/sxhkdrc
# never try to "remap"..., use script instead

# dont use Espace...
super + r
	pkill -USR1 -x sxhkd

super + ctrl + slash
	alacritty --command nvim ~/.config/sxhkd/sxhkdrc

super + ctrl + comma
	alacritty --working-directory ~/notes --command nvim ~/notes/todo.md

super + ctrl + period
	alacritty --working-directory ~/notes --command nvim ~/notes/todo.md

super + n
	alacritty

super + slash
	alacritty --command nvim

super + semicolon
	rofi -show run -matching fuzzy

super + w
	rofi -show window

super + apostrophe
	rofi -show ssh

# super + y
# 	xsel -po | xsel -bi
#
# @super + p
# 	/home/phanium/bin/rclip.sh

super + p
	CM_LAUNCHER=rofi clipmenu

super + F2
	sound-control down

super + F3
	sound-control up

super + F5
	light -U 20

super + F6
	light -A 20

super + ctrl + s
	flameshot gui

# bspwm
# navigate
super + {j, k}
	bspc node -f {next, prev}.local.!hidden.window

super + ctrl + {k, j}
	bspc desktop -f {prev,next}.local

# dwm like?
super + Return
	(bspc node -f biggest.window.local && \
		bspc node -f last.window.local && \
		bspc node -s biggest.window.local) || \
	(bspc node -f last.window.local && bspc node -s biggest.window.local)

super + g
	bspc node -s next.window.local

super + ctrl + g
	bspc node -s prev.window.local

super + ctrl + t
	. $XDG_CONFIG_HOME/sxhkd/scripts/toggle-polybar.sh

# super + ctrl + t
# 	notify-send oawijeffe

# resize
# super + shift + {h,j,k,l}
#   bspc node -z {left -20 0 || bspc node -z right -20 0, \
#                 bottom 0 20 || bspc node -z top 0 20,\
#                 top 0 -20 || bspc node -z bottom 0 -20,\
#                 right 20 0 || bspc node -z left 20 0}

super + s : {h,j,k,l}
	STEP=20; SELECTION={1,2,3,4}; \
	bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
	bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# set the node flags
super + ctrl + {m, x, y, z}
	bspc node -g {marked, locked, sticky, private}

# focus the node for the given path jump
super + ctrl + {p, b, comma, period}
	bspc node -f @{parent, brother, first, second}

# focus the last node/desktop
super + {grave, Tab}
	bspc {node -f last.local, desktop -f last}

# history
super + {o, i}
	bspc wm -h off; \
	bspc node -f {older, newer}; \
	bspc wm -h on

# focus or send to the given desktop
super + {_, shift + }{1-9, 0}
	bspc {desktop -f, node -d} '^{1-9, 10}'

# send to near desktop
super + shift + {j, k}
	bspc node -d {next, prev} --follow

# send to near desktop
super + shift + {n, p}
	bspc node -d {next, prev}


# quit restart
super + ctrl + q
	rm -f /tmp/fuckx.lock && bspc quit

super + ctrl + r
	bspc wm -r

# close kill
super + ctrl + {_, alt + }w
	bspc node -{c, k}

# tiled or monocle
super + m
	bspc desktop -l next

# hide window
super + v
	bspc node -g hidden

# unhide window
super + shift + v
	bspc node $(bspc query -N -n .hidden | tail -n1) -g hidden=off


# # switch mode
# super + {t, shift + t, s, f}
# 	bspc node -t {tiled, pseudo_tiled, floating, fullscreen}
#
# # preselect the direction
# super + shift + {h,j,k,l}
# 	bspc node -p {west,south,north,east}
#
# super + alt + {h,j,k,l}
# 	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
#
# # contract a window by moving one of its side inward
# super + alt + shift + {h,j,k,l}
# 	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# rotate the whole desktop
# super + shift + r
#     bspc node @/ -R 90

# rotate the parent of current focused
super + shift + r
    bspc node @parent -R 90

