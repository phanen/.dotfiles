# never try to "remap"..., use script instead

super + {_, ctrl +} n
	{alacritty, alacritty}

super + semicolon
	rofi -show drun

super + w
	rofi -show window

super + Escape
	pkill -USR1 -x sxhkd

super + apostrophe
	rofi -show ssh

# super + y
# 	xsel -po | xsel -bi
#
# @super + p
# 	/home/phanium/bin/rclip.sh

super + p
	CM_LAUNCHER=rofi clipmenu

super + F2
	sound-control down

super + F3
	sound-control up

super + F5
	light -U 20

super + F6
	light -A 20

super + ctrl + s
	flameshot gui

# bspwn 
# /usr/share/doc/bspwm/examples/sxhkdrc

  # navigate
super + {j, k}
	bspc node -f {next, prev}.local.!hidden.window

super + ctrl + {k, j}
	bspc desktop -f {prev,next}.local

super + g
    bspc node -s biggest.window.local || \
    bspc node -s last.local

super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# resize
# super + shift + {h,j,k,l}
#   bspc node -z {left -20 0 || bspc node -z right -20 0, \
#                 bottom 0 20 || bspc node -z top 0 20,\
#                 top 0 -20 || bspc node -z bottom 0 -20,\
#                 right 20 0 || bspc node -z left 20 0}

# set the node flags
super + ctrl + {m, x, y, z}
	bspc node -g {marked, locked, sticky, private}

# focus the node for the given path jump
super + ctrl + {p, b, comma, period}
	bspc node -f @{parent, brother, first, second}

# focus the last node/desktop
super + {grave, Tab}
	bspc {node, desktop} -f last

# history
super + {o, i}
	bspc wm -h off; \
	bspc node {older, newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_, shift + }{1-9, 0}
	bspc {desktop -f, node -d} '^{1-9, 10}'

# quit restart
super + ctrl + q
	rm -f /tmp/fuckx.lock && bspc quit

super + ctrl + r
	bspc wm -r

# close kill
super + ctrl + {_, alt + }w
	bspc node -{c, k}

# tiled or monocle
super + m
	bspc desktop -l next

# switch mode
super + {t, shift + t, s, f}
	bspc node -t {tiled, pseudo_tiled, floating, fullscreen}

# preselect the direction
super + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + shift + semicolon
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# xiao
# rotate the whole desktop
super + shift + r
    bspc node @/ -R 90

# rotate the parent of current focused
super + r
    bspc node @parent -R 90

# hide window
super + v
    bspc node -g hidden

# unhide window
super + shift + v
    bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

